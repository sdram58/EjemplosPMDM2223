<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivLike1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/twitter_like" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivLike2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/twitter_like" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivLike3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/twitter_like" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivLike4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/twitter_like" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivLike5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/twitter_like" />

        <!-- Some settings in xml file
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="false"
            app:lottie_fileName="animation.json" -> if json is in asset folder
            app:lottie_rawRes="@raw/animation" -> if json is in Raw folder
            app:lottie_loop="false" /> -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>